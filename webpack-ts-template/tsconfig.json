{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "Src/*": ["./src/*"],
      "Component/*": ["./src/components/*"],
      "Asset/*": ["./src/assets/*"],
      "Style/*": ["./src/styles/*"],
      "Pages/*": ["./src/pages/*"]
    },
    "target": "es5",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "outDir": "build",
    "sourceMap": true,
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
